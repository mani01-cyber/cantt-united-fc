generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
}

model Trial {
  id        String   @id @default(cuid())
  fullName  String
  age       Int
  position  Position
  phone     String
  email     String
  status    TrialStatus @default(PENDING)
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Position {
  GOALKEEPER
  DEFENDER
  MIDFIELDER
  STRIKER
}

enum TrialStatus {
  PENDING
  ACCEPTED
  REJECTED
  SCHEDULED
}

// Simplified User specifically for Admin Access
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String   
  name      String
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Fixture {
  id        String   @id @default(cuid())
  opponent  String
  date      String
  time      String
  venue     String
  type      String
  isActive  Boolean  @default(true) // Marks if this is the currently "Next" fixture
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
