generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
}

model Trial {
  id        String   @id @default(cuid())
  
  fullName  String
  age       Int
  position  Position
  phone     String
  email     String
  
  status    TrialStatus @default(PENDING)
  notes     String?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Position {
  GOALKEEPER
  DEFENDER
  MIDFIELDER
  STRIKER
}

enum TrialStatus {
  PENDING
  ACCEPTED
  REJECTED
  SCHEDULED
}
